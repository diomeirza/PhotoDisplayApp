<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuoteSlider.Views.StackLayout1"
             BackgroundColor="#127ac7">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Spacing="20" > 
            <Label x:Name="lblWelcome" Text="Welcome to Xamarin"
                   FontSize="30" FontAttributes="Bold" 
                   HorizontalOptions="Center"/>
            <Label x:Name="lblPlatform" Text="Cross-platform apps made easy" 
                   FontSize="18" HorizontalOptions="Center" />
            <Button x:Name="btnLogin" Text="Login"
                    BackgroundColor="#1dabf0"/>
            <Button x:Name="btnRegister" Text="Register"
                    BackgroundColor="#1dabf0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>